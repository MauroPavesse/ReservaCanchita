@page
@using ReservaCanchita.Services.Configuraciones
@inject ConfiguracionServicio configuracionService
@model ReservaCanchita.Pages.Administrador.LoginModel
@{
    Layout = null;
    var configuraciones = await configuracionService.ObtenerConfiguraciones(new List<string>
    {
        "LogoEmpresa"
    });

    string imagenUrl = configuraciones.First(x => x.Campo == "LogoEmpresa").ValorString;
}

<!DOCTYPE html>
<html>
    <head>
        <title>Login - Administrador</title>
        <link rel="icon" type="image/png" href="/images/@imagenUrl" asp-append-version="true" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
    </head>
    <body class="container mt-5">
        <h2>Ingreso Administrador</h2>
        <form method="post" class="mt-3">
            <div class="mb-3">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control" autocomplete="username" />
            </div>
            <div class="mb-3">
                <label asp-for="Clave" class="form-label"></label>
                <input asp-for="Clave" class="form-control" type="password" autocomplete="current-password" />
            </div>
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger">@Model.Error</div>
            }
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
    </body>
</html>